{
  "extends": "@edx/typescript-config",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "data": ["data/*"],
      "components": ["components/*"],
      "constants": ["constants/*"],
      "views": ["views/*"],
      "utils": ["utils/*"],
      "hooks": ["hooks/*"],
    }
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
